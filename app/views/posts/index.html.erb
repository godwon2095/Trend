<nav>
  <div class="nav-wrapper purple lighten-3">
    <form>
      <div class="input-field">
        <input id="search" type="search" placeholder="찾으시는 질문이 있나요?" required>
        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        <i class="material-icons">close</i>
      </div>
    </form>
  </div>
</nav>

<div class="container">
  <br><br>
  <%= link_to '질문등록', new_post_path, class: "waves-effect waves-light btn purple lighten-1" %><br>

  <div class="collection">
    <% @posts.each do |p| %>
    <a href="<%= post_path(p) %>" class="collection-item"><span class="badge"><%= p.created_at %></span>Q. <%= p.title %><span class="right"></span></a>
    <% end %>
  </div>
</div>
