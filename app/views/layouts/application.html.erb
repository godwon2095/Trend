<!DOCTYPE html>
<html>
  <head>
    <title>Trend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>

  <nav>
    <div class="nav-wrapper purple lighten-1">
      <a href="<%= root_path %>" class="brand-logo">Trend</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to '질문게시판', posts_path %></li>
          <li><%= link_to '로그아웃', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to '회원정보수정', edit_user_registration_path %></li>
        <% else %>
          <li><%= link_to '로그인', new_user_session_path %></li>
          <li><%= link_to '회원가입', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>


  <ul class="sidenav" id="mobile-demo">
    <li><div class="user-view">
      <div class="background">
        <img src="/fashion2.jpg">
      </div>
      <a href="#user"><img class="circle" src="/fashion1.jpg"></a>
      <a href="#name"><span class="white-text name">John Doe</span></a>
      <a href="#email"><span class="white-text email">jdandturk@gmail.com</span></a>
    </div></li>
    <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
    <li><a href="#!">Second Link</a></li>
    <li><div class="divider"></div></li>
    <li><a class="subheader">Trend</a></li>
    <li ><a href="<%= root_path %>" class="large material-icons">home홈</a></li>
    <% if user_signed_in? %>
      <li><a href="<%= posts_path %>" class="large material-icons">mode_edit질문게시판</a></li>
      <li><%= link_to '로그아웃', destroy_user_session_path, method: :delete %></li>
      <li><%= link_to '회원정보수정', edit_user_registration_path %></li>
    <% else %>
      <li><%= link_to '로그인', new_user_session_path %></li>
      <li><%= link_to '회원가입', new_user_registration_path %></li>
    <% end %>
  </ul>



    <%= yield %>
    <script>
    $(document).ready(function(){
  $('.sidenav').sidenav();
  });
    </script>
  </body>
</html>
